<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.ProfilePage"
             Title="Profile">

    <Grid>

        <!-- Gradient Background -->
        <Grid BackgroundColor="White">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="White" Offset="0.0"/>
                    <GradientStop Color="#BDA7E1" Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Background>

            <ScrollView>
                <VerticalStackLayout Spacing="20" Padding="20">

                    <!-- Profile Header -->
                    <Frame BackgroundColor="White" 
                           BorderColor="#5A339E" 
                           CornerRadius="15" 
                           Padding="20"
                           Margin="0,20,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <VerticalStackLayout Grid.Row="1" Spacing="5">
                                <Label x:Name="Profile"
                                       Text="Profile"
                                       FontSize="24"
                                       FontAttributes="Bold"
                                       TextColor="#5A339E"
                                       HorizontalOptions="Center"/>
                                <Label x:Name="UserEmailLabel"
                                       Text="Loading..."
                                       TextColor="Gray"
                                       HorizontalOptions="Center"/>
                            </VerticalStackLayout>

                            <Image x:Name="ProfileImage"
                                   Source="profile.png"
                                   HeightRequest="120"
                                   WidthRequest="120"
                                   Aspect="AspectFill"
                                   HorizontalOptions="Center"
                                   Margin="0,0,0,10"/>
                        </Grid>
                    </Frame>

                    <!-- Settings Section -->
                    <Frame BackgroundColor="White" 
                           BorderColor="#5A339E" 
                           CornerRadius="15" 
                           Padding="20">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Settings"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="#5A339E"/>

                            <!-- Each Setting Option -->
                            <Border StrokeThickness="1" Stroke="#5A339E" Padding="15" BackgroundColor="Transparent">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Image Source="account.png" HeightRequest="24" WidthRequest="24"/>
                                    <Label Text="Account Settings" 
                                           Grid.Column="1" 
                                           VerticalOptions="Center"
                                           TextColor="Black"/>
                                    <Image Source="chevron_right.png" Grid.Column="2" HeightRequest="20" WidthRequest="20"/>
                                </Grid>
                            </Border>

                            <Border StrokeThickness="1" Stroke="#5A339E" Padding="15" BackgroundColor="Transparent">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Image Source="notifications.png" HeightRequest="24" WidthRequest="24"/>
                                    <Label Text="Notifications" 
                                           Grid.Column="1" 
                                           VerticalOptions="Center"
                                           TextColor="Black"/>
                                    <Image Source="chevron_right.png" Grid.Column="2" HeightRequest="20" WidthRequest="20"/>
                                </Grid>
                            </Border>

                            <Border StrokeThickness="1" Stroke="#5A339E" Padding="15" BackgroundColor="Transparent">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Image Source="privacy.png" HeightRequest="24" WidthRequest="24"/>
                                    <Label Text="Privacy" 
                                           Grid.Column="1" 
                                           VerticalOptions="Center"
                                           TextColor="Black"/>
                                    <Image Source="chevron_right.png" Grid.Column="2" HeightRequest="20" WidthRequest="20"/>
                                </Grid>
                            </Border>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Logout Button -->
                    <Button Text="Log Out"
                            BackgroundColor="#5A339E"
                            TextColor="White"
                            CornerRadius="12"
                            HeightRequest="50"
                            Clicked="OnLogoutClicked"/>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>

        <!-- Loading Overlay on top -->
        <Grid x:Name="LoadingOverlay" 
              IsVisible="False"
              BackgroundColor="#80000000"
              VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand"
              ZIndex="1000">

            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <ActivityIndicator x:Name="LoadingIndicator"
                                   IsRunning="False"
                                   Color="White"
                                   WidthRequest="50"
                                   HeightRequest="50"/>
                <Label x:Name="LoadingTextLabel"
                       Text="Loading profile..."
                       TextColor="White"
                       FontSize="16"
                       HorizontalOptions="Center"
                       Margin="0,10,0,0"/>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>
